{
  "name": "grocery-booking-api",
  "version": "1.0.0",
  "description": "Basic Grocery Booking API",
  "scripts": {
    "build": "npx tsc && npm run copy-files",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "prod": "npx tsc && node dist/server.js",
    "lint": "tsc --noEmit && eslint .",
    "lint-fix": "npx eslint . --fix",
    "copy-files": "cp -r ./src/public ./dist && cp -r ./src/view ./dist",
    "migrate": "npx knex --knexfile ./src/knexFile.ts migrate:latest +x ts",
    "rollback": "npx knex --knexfile ./src/knexFile.ts migrate:rollback +x ts",
    "seed": "npx knex --knexfile ./src/knexFile.ts seed:run +x ts",
    "db-init": "npx knex --knexfile ./src/knexFile.ts migrate:latest +x ts && npx knex --knexfile ./src/knexFile.ts seed:run +x ts"
  },
  "keywords": [
    "typescript",
    "express"
  ],
  "author": "Rishabh Pathak <clusmsyknight@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.3",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "memory-cache": "^0.2.0",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "pg": "^8.11.5",
    "showdown": "^2.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.17.0",
    "@types/memory-cache": "^0.2.5",
    "@types/morgan": "^1.9.9",
    "@types/morgan-json": "^1.1.3",
    "@types/node": "^20.12.7",
    "@types/showdown": "^2.0.6",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
